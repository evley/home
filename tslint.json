{
  "extends": "tslint:recommended",
  "rules": {
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "component-max-inline-declarations": true,
    "no-lifecycle-call": false,
    "prefer-output-readonly": false,
    "no-conflicting-lifecycle": true,
    "enforce-component-selector": false,
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-host-metadata-property": true,
    "use-view-encapsulation": false,
    "no-attribute-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-output-on-prefix": false,
    "no-forward-ref": true,
    "no-unused-css": false,
    "use-lifecycle-interface": true,
    "contextual-lifecycle": true,
    "trackBy-function": false,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "no-pipe-impure": true,
    "i18n": [
      false,
      "check-id",
      "check-text"
    ],
    "template-cyclomatic-complexity": [
      false,
      5
    ],
    "template-conditional-complexity": [
      true,
      4
    ],
    "trailing-comma": [false, {
      "multiline": "always",
      "singleline": "never"
    }],
    "interface-name": [false, "always-prefix"],
    "use-pipe-decorator": true,
    "no-console": [
      true,
      "time",
      "timeEnd",
      "trace"
    ],
    "max-line-length": [true, {
      "limit": 100,
      "ignore-pattern": "^import |^export"
    }],
    "max-file-line-count": [
      true,
      500
    ],
    "no-string-literal": false,
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "no-duplicate-imports": true,
    "ordered-imports": [
      true,
      {
        "module-source-path": "full",
        "grouped-imports": true,
        "groups": [
          {
            "name": "angular",
            "match": "^@angular\/.*",
            "order": 1
          },
          {
            "name": "@shared",
            "match": "^(@shared|environment).*",
            "order": 3
          },
          {
            "name": "relative dir",
            "match": "^([.]|app).*",
            "order": 4
          },
          {
            "name": "node_modules",
            "match": ".*",
            "order": 2
          }
        ]
      }
    ]
  },
  "rulesDirectory": [
    "codelyzer"
  ]
}
